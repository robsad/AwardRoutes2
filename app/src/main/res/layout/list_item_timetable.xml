<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

                <TextView
                    android:id="@+id/timetableTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8:00-9:00"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/timetableOriginName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="POZ - Poznan Lawica"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDestinationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MUC - Munich Airport"
                    android:textSize="12sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timetableDaysOfOperations7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timetableAirline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lufthansa"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timetableFlightNr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="FlightNr: LH2345"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timetableDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 1:20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timetableAircraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aircraft: A320"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timetableDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: 1200miles"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timetableStops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stops: non-stop"
            android:textSize="12sp" />

    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>



